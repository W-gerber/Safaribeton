generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  surname   String?
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
  emailSent Boolean  @default(false)
}
